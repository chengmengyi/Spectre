<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg">
    <View
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="20dp"
        android:src="@drawable/icon_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_view"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Result"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_result_bg"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:scaleType="fitXY"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/result_bg"
        app:layout_constraintTop_toBottomOf="@id/iv_back"/>
    <View
        android:id="@+id/view_flag_bg"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/bg_home_server_flag"
        app:layout_constraintTop_toTopOf="@id/iv_result_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_result_bg"
        app:layout_constraintRight_toRightOf="@id/iv_result_bg" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_server_flag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/flag_default"
        app:layout_constraintTop_toTopOf="@id/view_flag_bg"
        app:layout_constraintLeft_toLeftOf="@id/view_flag_bg"
        app:layout_constraintRight_toRightOf="@id/view_flag_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_flag_bg"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_connect_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="00:00:00"
        android:textColor="#45E333"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_result_bg"
        app:layout_constraintTop_toBottomOf="@id/view_flag_bg"
        app:layout_constraintRight_toRightOf="@id/iv_result_bg"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_connect_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="Connection succeed"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/iv_result_bg"
        app:layout_constraintRight_toRightOf="@id/iv_result_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_time" />
</androidx.constraintlayout.widget.ConstraintLayout>