<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/page_bg">
        <View
            android:id="@+id/status_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_set"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/home_set"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status_view"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Spectre"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_set"
            app:layout_constraintBottom_toBottomOf="@id/iv_set"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_connect_idle"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/connect_default_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_connect"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/connecting_lottie_view"
            android:layout_width="280dp"
            android:layout_height="280dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"
            app:lottie_fileName="data.json"
            app:lottie_imageAssetsFolder="images/"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_connect"/>
        <View
            android:id="@+id/center_click_view"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_connect" />
        <View
            android:id="@+id/view_connect"
            android:layout_width="255dp"
            android:layout_height="91dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/connect_btn_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_choose_server"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_connect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/view_connect"
            app:layout_constraintLeft_toLeftOf="@id/view_connect"
            app:layout_constraintRight_toRightOf="@id/view_connect"
            app:layout_constraintBottom_toBottomOf="@id/view_connect"
            />
        <View
            android:id="@+id/view_choose_server"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_96eafe_8dp"
            app:layout_constraintBottom_toTopOf="@id/bottom"/>
        <View
            android:id="@+id/view_flag_bg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/bg_home_server_flag"
            app:layout_constraintTop_toTopOf="@id/view_choose_server"
            app:layout_constraintRight_toRightOf="@id/view_choose_server"
            app:layout_constraintBottom_toBottomOf="@id/view_choose_server"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_server_flag"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/flag_default"
            app:layout_constraintTop_toTopOf="@id/view_flag_bg"
            app:layout_constraintLeft_toLeftOf="@id/view_flag_bg"
            app:layout_constraintRight_toRightOf="@id/view_flag_bg"
            app:layout_constraintBottom_toBottomOf="@id/view_flag_bg"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:src="@drawable/tis_text"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@id/view_choose_server"
            app:layout_constraintLeft_toLeftOf="@id/view_choose_server"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_connect_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="00:00:00"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintLeft_toLeftOf="@id/view_choose_server"
            app:layout_constraintBottom_toBottomOf="@id/view_choose_server"
            />
        <include
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_margin="12dp"
            layout="@layout/layout_home_ad"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="275dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@drawable/drawer_bg">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_drawer_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="88dp"
            android:src="@drawable/drawer_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_contact"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="17sp"
            android:text="Contact us"
            android:paddingLeft="40dp"
            android:layout_marginTop="48dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/iv_drawer_logo"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_update"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="17sp"
            android:paddingLeft="40dp"
            android:text="Update"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_contact"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_privacy"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="17sp"
            android:paddingLeft="40dp"
            android:text="Privacy Policy"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_update"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="17sp"
            android:paddingLeft="40dp"
            android:text="Share"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>