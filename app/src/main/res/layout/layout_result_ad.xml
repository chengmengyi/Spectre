<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="328dp">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_ad_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/bg_result_ad">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/iv_native_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:round="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_native_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLength="20"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#192340"
                android:layout_marginLeft="12dp"
                android:text="Cut the rope: Magic"
                app:layout_constraintTop_toTopOf="@id/iv_native_logo"
                app:layout_constraintLeft_toRightOf="@id/iv_native_logo"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/result_ad_tag"
                app:layout_constraintTop_toTopOf="@id/tv_native_title"
                app:layout_constraintLeft_toRightOf="@id/tv_native_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_native_title" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_native_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#192340"
                android:layout_marginLeft="12dp"
                android:text="Press the spacebar and want toâ€¦"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_native_logo"
                app:layout_constraintTop_toBottomOf="@id/tv_native_title" />
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/iv_native_cover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/iv_native_logo"
                app:layout_constraintBottom_toTopOf="@id/tv_native_btn"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_native_btn"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:text="Install"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bg_home_ad_btn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_native_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_result_ad_default"/>
</RelativeLayout>